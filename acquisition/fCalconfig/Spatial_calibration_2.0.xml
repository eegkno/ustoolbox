<PlusConfiguration version="2.1">

  <DataCollection StartupDelaySec="1.0">
    <DeviceSet 
      Name="Spatial_cal_2.0:Spatial calibration" 
      Description=" spatial calibration - fCal Phantom 2.0 - 3Nwires. Image and tracking data is provided by separate devices." />

	<!--BEGIN: Section of the tracker-->	
	<Device
      Id="TrackerDevice" 
      Type="AuroraTracker"
      SerialPort="3"
      BaudRate="115200"
      AcquisitionRate="50"
      LocalTimeOffsetSec="0.0"
	  SequenceFile="WaterTankBottomTranslationTrackerBuffer-trimmed.mha"
	  UseData="IMAGE_AND_TRANSFORM"
      UseOriginalTimestamps="TRUE"
      RepeatEnabled="TRUE"
      ToolReferenceFrame="Tracker" >
      <DataSources>
        <DataSource Type="Tool" Id="Reference" PortName="0" />
        <DataSource Type="Tool" Id="Probe" PortName="1" />
      </DataSources>
      <OutputChannels>
        <OutputChannel Id="TrackerStream" >
          <DataSource Id="Reference" />
          <DataSource Id="Probe" />
        </OutputChannel>
      </OutputChannels>
    </Device> 
	<!--END: Section of the tracker-->	
	
	
	<!--BEGIN: Section of the grabber-->
	<Device
      Id="VideoDevice" 
      Type="MmfVideo" 
      FrameSize="640x480" 
      VideoFormat="YUY2"
      CaptureDeviceId="0" >
      <DataSources>
        <DataSource Type="Video" Id="Video" PortUsImageOrientation="MF" BufferSize="150" AveragedItemsForFiltering="20" />
      </DataSources>      
      <OutputChannels>
        <OutputChannel Id="VideoStream" VideoDataSourceId="Video" />
      </OutputChannels>
    </Device>
	
    <Device
      Id="TrackedVideoDevice"
      Type="VirtualMixer"
      BaseFilename="RecordingTest.mha"
      EnableCapturing="FALSE" >
      <InputChannels>
	    <InputChannel Id="TrackerStream" />
        <InputChannel Id="VideoStream" />
      </InputChannels>
	  <OutputChannels>
        <OutputChannel Id="TrackedVideoStream"/>
      </OutputChannels>
    </Device>
	<!--END: Section of the grabber-->
    
  </DataCollection>

  <CoordinateDefinitions>
      <Transform From="Image" To="TransducerOriginPixel"
      Matrix="1 0 0 -410
              0 1 0 5
              0 0 1 0
              0 0 0 1"
      Date="2011.12.06 17:57:00" Error="0.0" />    
	  <Transform From="Phantom" To="Reference"
      Matrix="
        -0.00592357	0.0726392	0.997341	-21.9958
        0.00859551	0.997325	-0.072587	-23.6748
        -0.999946	0.00814268	-0.0065321	-4.77698
        0	0	0	1"
       Error="0.42547" Date="072618_161335" />
  </CoordinateDefinitions> 
  


  <Rendering WorldCoordinateFrame="Reference" DisplayedImageOrientation="MFA" >
    <DisplayableObject Type="Model" ObjectCoordinateFrame="TransducerOrigin" Id="ProbeModel"
      File="Probe_L14-5_38.stl"
      ModelToObjectTransform="
        -1 0 0 29.7
        0 -1 0 1.5
        0 0 1 -14
        0 0 0 1" />
    <DisplayableObject Type="Model" ObjectCoordinateFrame="Reference" Id="Volume"/>
    <DisplayableObject Id="PhantomModel" Type="Model" ObjectCoordinateFrame="Phantom"
      Opacity="0.6"
      File="fCal_2.0.stl"
      ModelToObjectTransform="
        1 0 0 -35.0
        0 1 0 -10.0
        0 0 1 -5.0
        0 0 0 1" />
    <DisplayableObject Type="Image" ObjectCoordinateFrame="Image" Id="LiveImage"/>
  </Rendering>

  
  <Segmentation
    ApproximateSpacingMmPerPixel="0.078"
    MorphologicalOpeningCircleRadiusMm="0.07"
    MorphologicalOpeningBarSizeMm="2.0"
    ClipRectangleOrigin="141 137" 
    ClipRectangleSize="300 217" 
    MaxLinePairDistanceErrorPercent="10"
    AngleToleranceDegrees="10"
    MaxAngleDifferenceDegrees="10"
    MinThetaDegrees="-70"
